    </select>
    <div class="mb-3">
    <select class="form-select" id="sub-mood-select"  //ADD THIS ID  aria-label="Default select example">
      <option selected>Pick a sub mood</option>
    </select>

  <div id="write-thoughts" class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label">Write your thoughts and feelings below:</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>
  <div>
