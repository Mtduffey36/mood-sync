<div id="signup-container" class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <di id="signup-title" class="card-header bg-primary text-white">
          <h2 class="mb-0"><center>Create Account</center></h2>
        </div>
        <div class="card-body">
          <div id="error-message" class="alert alert-danger d-none" role="alert"></div>
          <form id="signup-form" class="sign-form">
            <div class="mb-3">
              <label for="username" class="form-label">Username:</label>
              <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email:</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password:</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="mb-3">
              <label for="phone_number" class="form-label">Phone number:</label>
              <input type="tel" class="form-control" id="phone_number" name="phone_number" required>
            </div>
            <button id="signup-button" type="submit" class="btn btn-success w-100">Sign Up</button>
          </form>
          
        </div>
      </div>
    </div>
  </div>
</div>
<br><br>
  <script src="/js/signup.js"></script>
